// Button style

.button
  color white
  background-color blue
  padding 30px 40px
  font-size 1em
  font-weight 700
  margin 20px 0px
  transition background-color 100ms
  border-radius 3px
  display inline-block

  &:hover
    background-color lighten(blue, 5)

  &:active
    background-color darken(blue, 5)
    box-shadow inset 0px 5px 10px rgba(0,0,0,0.15)