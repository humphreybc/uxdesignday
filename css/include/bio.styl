.bio
  display none

.bio-overlay
  position fixed
  z-index 500
  top 0
  left 0
  width 100%
  height 100%
  background-color white
  display none

  .bio-modal
    position relative
    z-index 1000
    margin 0px auto
    padding 30px
    box-sizing border-box
    max-width 680px
    max-height 100%
    overflow-y auto
    font-size 0.9em
    text-align left
    background-color white

  .bio-modal-close
    margin-top 15px
    display block
    width 20px
    height 20px
    text-align center
    line-height 18px
    cursor pointer
    float right
    font-size 25px
    transition transform 500ms

    &:hover
      transform rotate(180deg)

