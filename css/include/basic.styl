// Basic stuff

body
  background white
  font-family 'Open Sans', sans-serif
  color black
  padding 100px 0px 0px
  margin 0px
  font-size 20px
  -webkit-font-smoothing antialiased

.logo
  background-image url('../img/logo.png')
  background-size cover
  width 220px
  height 200px
  margin-left 170px

  &.wellington
    background-image url('../img/logo_wel.png')
    width 262px
    height 215px
    margin-left 123px

hr
  border 2px solid #ddd


// A function that sets global properties with a dynamic color
set-color(color)
  color color
  transition color 250ms

  &:hover
    color lighten(color, 10)

.icon-twitter
  set-color twitterBlue

.icon-facebook
  set-color facebookBlue

.icon-googleplus
  set-color googleRed

.icon-github
  set-color #333
