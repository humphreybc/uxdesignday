// Basic stuff

body
  background white
  font-family 'Open Sans', sans-serif
  color black
  margin 0px
  font-size 20px
  -webkit-font-smoothing antialiased

hr
  border 2px solid #eee

.site
  padding 80px 0px 0px

.modal-open
  overflow hidden


// A function that sets global properties with a dynamic color
set-color(color)
  color color
  transition color 250ms

  &:hover
    color lighten(color, 10)

.icon-twitter
  set-color twitterBlue

.icon-facebook
  set-color facebookBlue

.icon-googleplus
  set-color googleRed

.icon-github
  set-color #333
