// Layout

section
  padding 40px 0px
  clear both
  min-width 940px

.container
  max-width 900px
  margin 0px auto
  padding 0px 20px
  position relative
  overflow hidden

#banner
  position relative
  width 100%
  background-image url("../img/dunedin-banner.jpg")
  background-size cover
  height 500px

  h1
    position absolute
    bottom 0
    padding 40px
    box-sizing border-box
    color white
    font-size 72px
    line-height 1.5
    text-align center

    span
      background-color rgba(0,0,0,0.25)

#event-details
  float left
  margin 23px 0px 0px 40px
  width 420px

  p
    font-size 0.6em
    line-height 1.3em
    margin 0.6em 0


.download-guides
  width 259px
  margin 20px 0 0 20px

  li
    display block
    width 71px
    margin-left 15px
    float left
    text-align center
    font-size 0.5em
    line-height 1.2em

    a
      display block
      padding 95px 0 0 0
      color white
      text-transform uppercase
      font-weight 800

    background-size contain
    background-repeat no-repeat

    &.convince-your-boss
      background-image url('../img/convince_boss_icon@2x.jpg')
    &.schedule
      background-image url('../img/schedule_icon@2x.jpg')

#reasons
  margin-top 40px
  margin-bottom 0px
  overflow hidden

.box
  float left
  width 33%

  &-last
    margin 0px 0px 20px 0px

  &-reason
    background-color lighten(blue, 3)
    transition background-color 250ms
    cursor default
    padding 10px 20px
    min-height 260px

  &-speaker
    margin-bottom 40px
    text-align center

    h3
      margin-bottom 0px

    a, .speaker-title
      font-size 0.75em
      line-height 1.3em
      display block
      margin 0px
      color gray
      transition color 250ms

    a:hover
      color blue

    img
      border-radius 3px

.sponsor-section
  min-height 400px

  img
    margin 15px 40px 15px
    border none
    opacity 0.9

    &:hover
      opacity 1

  .medallion
    display block
    position relative
    float left
    margin 30px 121px
    width 91px
    height 92px
    background-image url("../img/medals_sprite@2x.png")
    background-position left top
    background-size cover

    &.silver
      background-position 182px top
    &.bronze
      background-position 91px top
