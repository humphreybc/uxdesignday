// Layout

section
  padding 40px 0px
  clear both
  min-width 940px

.container
  max-width 900px
  margin 0px auto
  padding 0px 20px
  position relative

#banner
  position relative
  width 100%
  background-color black
  background-size cover
  background-position 50% 80%
  transition background-image 10s linear
  height 450px

  h1
    position absolute
    bottom 0
    padding 40px
    box-sizing border-box
    color white
    font-size 3.6em
    line-height 1.5
    text-align center

    span
      background-color rgba(0,0,0,0.25)
      box-shadow -0.3em 0 0 rgba(0,0,0,0.25), 0.3em 0 0 rgba(0,0,0,0.25)
      letter-spacing -0.04em

.box
  float left
  width 33.333%

  &-last
    margin 0px 0px 20px 0px

  &-speaker
    margin 20px 0px
    text-align center

    .speaker-meta p
      font-size 0.75em
      line-height 1.3em
      display block
      margin 0px
      color gray
      transition color 250ms

    img
      border-radius 6px
      transition opacity 250ms

      &:hover
        opacity 0.8

.sponsor-section
  min-height 400px

  img
    margin 15px 40px 15px
    border none
    opacity 0.9

    &:hover
      opacity 1

#top, #get-tickets, #speakers, #sponsors, #education
  position: relative
  display: block
  top: -120px