.home
  padding 40px
  margin 0px auto
  max-width 600px
  text-align center
  clear both

  #home-title
    font-weight 700
    font-size 16px

  .location
    margin 20px 0px 
    position relative

    .bg-image
      max-width 600px
      height 450px
      background-size cover

    #dunedin2014
      background-image url('../img/dunedin2014.jpg')

  .overlay
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    width 100%
    height 100%
    background-color rgba(0,0,0,0.4)
    transition background-color 250ms

    &:hover
      background-color rgba(0,0,0,0.2)

    .overlay-text
      position absolute
      bottom 20px
      left 20px
      padding 20px
      color white
      font-size 26px
      font-weight 400
      text-transform uppercase
      text-align left

  .no-hover
    background-color rgba(0,0,0,0.1)

    &:hover
      background-color rgba(0,0,0,0.1)

