.home
  padding 20px
  margin 0px auto
  max-width 600px
  text-align center
  clear both

  #home-title
    font-weight 600
    font-size 0.8em

  .location
    margin 20px 0px 
    position relative

    .bg-image
      max-width 600px
      height 450px
      background-size cover

    #dunedin2014
      background-image url('../img/dunedin2014.jpg')

  .overlay
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    width 100%
    height 100%
    background-color rgba(0,0,0,0.2)
    box-shadow inset 0px 0px 40px rgba(0,0,0,0.5)
    transition background-color 250ms, box-shadow 250ms

    &:hover
      background-color rgba(42,165,211,0.5)
      box-shadow none

    .overlay-text
      position absolute
      bottom 10px
      left 10px
      padding 10px
      color white
      font-size 1.3em
      font-weight 400
      text-transform uppercase
      text-align left

  .future-location
    background-color lightgray
    box-shadow none

    &:hover
      background-color lightgray

    .overlay-text
      color #888
      text-transform inherit 
      font-size 1em

