// Replace the logo with high res asset

@media screen and (max-width: 820px)

  #nav-links
    display none

// Responsiveness for mobile

@media screen and (max-width: 600px)

  body
    font-size 18px

  .container, .box, .button, .box-speaker img, .resources li
    width 100%
    box-sizing border-box
    -moz-box-sizing border-box

  header
    position absolute
    box-shadow none

    .container
      width 100%

  #banner h1
    font-size 2.5em

  section
    min-width 0

  .box-speaker img
    height auto

  .sponsor-section .container img
    margin 30px auto
    display block
    padding 0px


