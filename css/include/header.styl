// Fixed header / navigation

header
  height 100px
  position fixed
  top 0px
  left 0px
  z-index 150
  width 100%
  background-color white
  box-shadow 0px 2px 5px rgba(0,0,0,0.1)

  nav ul
    padding 35px 0px 0px
    margin 0px
    float left

    li
      float left
      display inline-block
      list-style-type none
      margin-right 40px

      &:last-child
        margin-right 0px

      a
        color black
        font-weight 600
        font-size 0.8em

        &:hover
          color blue

      a.active
        color blue

        &:hover
          color blue

    .icon
      margin-right 10px

  .nav-logo
    background-image url('../img/navlogo.png')
    width 60px
    height 60px
    background-size cover
    margin 20px 40px 0px 0px
    float left
    transition margin 150ms

    &:hover
      margin 15px 40px 5px 0px
      opacity 0.9

  #header-share
    margin-top 39px
    float right
    color gray
    font-weight 600
    font-size 0.8em

    &:hover
      color black

#share-box
  float right
  z-index 100
  height 60px
  text-align center
  padding 20px 0px 20px 20px
  line-height 75px

  ul
    cursor normal

  li
    display inline
    margin 0px 3px

    &:last-child
      margin-right 0px

    a
      font-size 1.5em
      transition color 250ms