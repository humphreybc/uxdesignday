// Fixed header / navigation

header
  height 80px
  position fixed
  top 0px
  left 0px
  z-index 150
  width 100%
  background-color white
  box-shadow 0 1px 0px rgba(0,0,0,0.1)

  nav ul
    padding 24px 0px 0px
    margin 0px
    float left

    li
      float left
      display inline-block
      list-style-type none
      margin-right 32px

      &:last-child
        margin-right 0px

      a
        color black
        font-weight 600
        font-size 0.8em

        &:hover
          color blue

      a.active
        color blue

        &:hover
          color blue

    .icon
      margin-right 10px
      vertical-align middle
      line-height inherit

  .nav-logo
    background-image url('../img/logomark-heart.svg')
    width 48px
    height 48px
    background-size cover
    margin 16px 32px 0px 0px
    float left
    transition transform 500ms, opacity 150ms

    &:hover
      transform rotate(180deg)
      // margin-top 12px
      opacity 0.9

#share-box
  float right
  z-index 100
  height 60px
  text-align center
  padding 6px 0px 0px 20px
  line-height 75px

  ul
    cursor normal

  li
    display inline
    margin 0px 3px

    &:last-child
      margin-right 0px

    a
      font-size 1.5em
      transition color 250ms