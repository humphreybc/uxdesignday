@font-face {
  font-family: 'uxdesignday';
  src:url('../fonts/uxdesignday.eot');
  src:url('../fonts/uxdesignday.eot?#iefix') format('embedded-opentype'),
    url('../fonts/uxdesignday.woff') format('woff'),
    url('../fonts/uxdesignday.ttf') format('truetype'),
    url('../fonts/uxdesignday.svg#uxdesignday') format('svg');
  font-weight: normal;
  font-style: normal;
}

/* Use the following CSS code if you want to use data attributes for inserting your icons */
[data-icon]:before {
  font-family: 'uxdesignday';
  content: attr(data-icon);
  speak: none;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
}

/* Use the following CSS code if you want to have a class per icon */
/*
Instead of a list of all class selectors,
you can use the generic selector below, but it's slower:
[class*="icon-"] {
*/
.icon-ticket, .icon-users, .icon-flag, .icon-calendar, .icon-facebook, .icon-twitter, .icon-googleplus, .icon-github {
  font-family: 'uxdesignday';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
}
.icon-ticket:before {
  content: "\e000";
}
.icon-users:before {
  content: "\e001";
}
.icon-flag:before {
  content: "\e002";
}
.icon-calendar:before {
  content: "\e003";
}
.icon-facebook:before {
  content: "\e004";
}
.icon-twitter:before {
  content: "\e005";
}
.icon-googleplus:before {
  content: "\e006";
}
.icon-github:before {
  content: "\e007";
}
